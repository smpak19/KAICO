<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/assetTitle"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="내 보유자산"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:id="@+id/krwTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="보유KRW"/>
                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:id="@+id/krwView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:id="@+id/totalTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="총 보유자산"/>
                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:id="@+id/totalView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:id="@+id/totalBuyTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="총 매수"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical|center_horizontal|center"
                        android:id="@+id/totalBuyView"
                        android:paddingRight="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="0"
                        android:layout_weight="2"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:id="@+id/gainAndLossTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="평가손익"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical|center_horizontal|center"
                        android:id="@+id/gainAndLossView"
                        android:paddingRight="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="일단 0"
                        android:layout_weight="2"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:id="@+id/totalEvaluationTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="총평가"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical|center_horizontal|center"
                        android:id="@+id/totalEvaluationView"
                        android:paddingRight="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="일단 string/asset_no_data"
                        android:layout_weight="2"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:id="@+id/yieldTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="수익률"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical|center_horizontal|center"
                        android:id="@+id/yieldView"
                        android:paddingRight="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="여기도 일단 0"
                        android:layout_weight="2"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/noAssetView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="보유 코인 목록"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>