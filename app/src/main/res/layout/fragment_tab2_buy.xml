<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/main_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
        <TextView android:textSize="14sp" android:textColor="@color/black android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView2" android:padding="10dp" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/transaction_can_order" android:layout_weight="2"/>
        <TextView android:textStyle="bold" android:textColor="@color/upbit_light_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/canOrderPrice" android:padding="10dp" android:layout_width="0dp" android:layout_height="40dp" android:text="0KRW" android:layout_weight="3" android:autoSizeTextType="1" android:autoSizeStepGranularity="2sp" android:autoSizeMinTextSize="8sp" android:autoSizeMaxTextSize="16sp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/transaction_linearlayout_border" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
            <TextView android:textSize="14sp" android:textColor="@color/upbit_light_gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView5" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/transaction_order_count" android:layout_weight="1"/>
            <EditText android:textSize="14sp" android:textColor="@color/upbit_light_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/orderCount" android:background="@null" android:padding="0dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:cursorVisible="true" android:layout_weight="2" android:inputType="numberDecimal" android:textCursorDrawable="@drawable/edittext_cursor_color_gray"/>
        </LinearLayout>
        <Spinner android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/orderCountSpinner" android:background="@drawable/transaction_linearlayout_border" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:popupBackground="@color/main_background" android:prompt="@string/orderCountSpinner_prompt" android:layout_weight="1" android:dropDownWidth="match_parent" android:spinnerMode="dropdown" style="@style/SpinnerwithNoArrow"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/transaction_linearlayout_border" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
            <TextView android:textSize="14sp" android:textColor="@color/upbit_light_gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView6" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/transaction_order_price" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="@color/upbit_light_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/orderPrice" android:layout_width="0dp" android:layout_height="wrap_content" android:text="604" android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_weight="1">
            <ImageButton android:id="@+id/orderPriceMinusBtn" android:background="@color/transaction_background" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="2dp" android:src="@drawable/ic_baseline_remove_24" android:layout_weight="1"/>
            <ImageButton android:id="@+id/orderPricePlusBtn" android:background="@color/transaction_background" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/ic_baseline_add_24" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/transaction_linearlayout_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <TextView android:textSize="14sp" android:textColor="@color/upbit_light_gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView7" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/transaction_order_total_price" android:layout_weight="1"/>
        <TextView android:textSize="14sp" android:textColor="@color/upbit_light_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/orderTotalPrice" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0KRW" android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <Button android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/resetBtn" android:layout_width="0dp" android:layout_height="50dp" android:text="@string/transaction_order_reset" android:layout_weight="1" android:backgroundTint="@color/coin_list_gray"/>
        <Button android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/buyBtn" android:layout_width="0dp" android:layout_height="50dp" android:text="@string/transaction_buy" android:layout_weight="1" android:backgroundTint="@color/coin_list_red"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <TextView android:textSize="12sp" android:textColor="@color/coin_list_gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView9" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/transaction_order_minimum_price1" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="@color/coin_list_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/textView10" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/transaction_order_minimum_price2" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <TextView android:textSize="12sp" android:textColor="@color/coin_list_gray" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView11" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/transaction_order_fee1" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="@color/coin_list_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/textView12" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/transaction_order_fee2" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>